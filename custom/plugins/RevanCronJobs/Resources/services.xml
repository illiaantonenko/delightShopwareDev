<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="revan_cron_jobs.subscribers.cron_job_subscriber"
                 class="RevanCronJobs\Subscribers\CronJobSubscriber">
            <argument>%revan_cron_jobs.plugin_dir%</argument>
            <argument type="service" id="service_container"/>
            <tag name="shopware.event_subscriber"/>
        </service>
        <service
                id="revan_cron_jobs.commands.import_command"
                class="RevanCronJobs\Commands\ImportCommand">
            <tag name="console.command" command="revancronjobs:cleardir"/>
        </service>
    </services>

</container>